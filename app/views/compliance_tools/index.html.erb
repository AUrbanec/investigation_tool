<h1>Listing compliance_tools</h1>

<table>
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Date of flag</th>
      <th>Transaction amount if applicable</th>
      <th>Notes</th>
      <th>Customer number</th>
      <th>Open or closed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compliance_tools.each do |compliance_tool| %>
      <tr>
        <td><%= compliance_tool.customer_name %></td>
        <td><%= compliance_tool.date_of_flag %></td>
        <td><%= compliance_tool.transaction_amount_if_applicable %></td>
        <td><%= compliance_tool.notes %></td>
        <td><%= compliance_tool.customer_number %></td>
        <td><%= compliance_tool.open_or_closed %></td>
        <td><%= link_to 'Show', compliance_tool %></td>
        <td><%= link_to 'Edit', edit_compliance_tool_path(compliance_tool) %></td>
        <td><%= link_to 'Destroy', compliance_tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

